@model CreateBrandDto

@{
    ViewData["Title"] = "CreateBrand";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <label for="name">Marka Adı</label>
                        <input type="text" asp-for="Name" class="form-control" />
                        <br />
                        <label for="name">Marka Görsel</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" />
                        <br />
                        <button type="submit" class="btn btn-primary">Marka Ekle</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>
