@model UpdateSpecialOfferDto

@{
    ViewData["Title"] = "UpdateSpecialOffer";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" asp-for="Id" class="form-control" />
                        <label for="name">Teklif Başlığı</label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <br />
                        <label for="name">Teklif Alt Başlığı</label>
                        <input type="text" asp-for="SubTitle" class="form-control" />
                        <br />
                        <label for="name">Teklif Görsel</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" />
                        <br />
                        <button type="submit" class="btn btn-success">Özel Teklifi Güncelle</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>

