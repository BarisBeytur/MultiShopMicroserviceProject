@model UpdateProductDetailDto

@{
    ViewData["Title"] = "UpdateProductDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ProductId" />
                        <label for="name">Ürün Açıklaması</label>
                        <textarea rows="5" class="form-control" asp-for="Description"></textarea>
                        <br />
                        <label for="name">Ürün Bilgisi</label>
                        <textarea rows="5" class="form-control" asp-for="Info"></textarea>
                        <br />
                        <button type="submit" class="btn btn-success">Güncelle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>



